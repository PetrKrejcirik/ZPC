#include <LiquidCrystal.h>

int posun=15;
int posun2=0;
int posun2_inkrement;
LiquidCrystal lcd(12, 11, 5, 4, 3, 2);

void setup() {
  lcd.begin(16, 2);
  lcd.print("Hello world!");
}

void loop() {
  if(posun < 0) {
    posun = 15;
  }
  lcd.setCursor(0, 0);
  lcd.print("                ");
  lcd.setCursor(0, 1);
  lcd.print("                ");
  lcd.setCursor(posun, 0);
  lcd.print("Hello world!");
  posun--;
  lcd.setCursor(posun2, 1);
  if(posun2 == 15) {
    posun2_inkrement = -1;
  }
  else if(posun2 == 0) {
    posun2_inkrement = 1;
  }
  posun2 = posun2 + posun2_inkrement;
  lcd.print(millis() / 1000);
  delay(1000);
}
